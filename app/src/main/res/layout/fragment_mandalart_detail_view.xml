<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mandalart_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_mandalart_background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.main.MandalartDetailViewFragment">

    <TextView
        android:id="@+id/final_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만다라트 목표"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/final_goal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        tools:text="최종 목표 내용" />

    <TextView
        android:id="@+id/sub_goals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="세부 목표"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sub_goals_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/mandalart_detail_button_background"
            android:textColor="@color/mandalart_pink_text"
            android:text="삭제" />

        <Button
            android:id="@+id/save_image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@color/mandalart_detail_button_background"
            android:textColor="@color/mandalart_pink_text"
            android:text="이미지 저장" />
    </LinearLayout>

</LinearLayout>